---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<div class="link-card">
	<a href={href}>
		<h2>{title}</h2>
		<p>{body}</p>
	</a>
</div>

<style>
	.link-card {
		background-color: #dddddd;
		margin: 0 0 1rem 0;
		padding: 1em;
		border: 1px solid #333333;
	}
	h2 {
		margin: 0;
	}
	p {
		margin-bottom: 0.5em;
	}
</style>
