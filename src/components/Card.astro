---
interface Props {
	title: string | undefined;
	url: string | undefined;
}

const { title, url } = Astro.props;
---

<div class="link-card">
	<a href={url}>
		<h2>{title}</h2>
	</a>
</div>

<style>
	.link-card {
		background-color: #dddddd;
		margin: 0 0 1rem 0;
		padding: 1em;
		border: 1px solid #333333;
	}
	h2 {
		margin: 0;
	}
</style>
